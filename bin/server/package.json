{
  "name": "loxbuddy_server",
  "version": "0.1.0",
  "description": "LoxBuddy Server",
  "homepage": "https://github.com/nufke/LoxBerry-Plugin-LoxBuddy",
  "main": "loxbuddy_server.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev": "node loxbuddy_server.js",
    "start": "PM2_HOME=$(pwd)/.pm2 pm2 start loxbuddy_server.config.js --watch --name LoxBuddyServer",
    "restart": "PM2_HOME=$(pwd)/.pm2 pm2 restart  loxbuddy_server.config.js --watch --name LoxBuddyServer",
    "stop": "PM2_HOME=$(pwd)/.pm2 pm2 stop loxbuddy_server.config.js",
    "delete": "PM2_HOME=$(pwd)/.pm2 pm2 delete loxbuddy_server.config.js",
    "kill": "PM2_HOME=$(pwd)/.pm2 pm2 kill",
    "list": "PM2_HOME=$(pwd)/.pm2 pm2 list",
    "logs": "PM2_HOME=$(pwd)/.pm2 pm2 logs",
    "status": "PM2_HOME=$(pwd)/.pm2 pm2 status"
  },
  "private": true,
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "loxberry-logger": "git+https://github.com/nufke/loxberry-logger.git#9d1a7f0",
    "mqtt": "^4.3.7",
    "pm2": "^5.3.0"
  }
}
